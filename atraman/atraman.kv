#:kivy 1.8.0
<CalendarWidget>:
    
    orientation: 'vertical'
    calendar_layout: cal
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.15
        Button:
            text: '<<'
            on_press: root.do_month_before()
                    
        Label:
            id: month
            text: root.month
                   
        Label:
            id: year
            text: root.year
                    
        Button:
            text: '>>'
            on_press: root.do_month_next()
        
    GridLayout:
        cols: 7
        size_hint_y: 0.15
        id: calendar
        Label:
            text: 'Mo'
        Label:
            text: 'Di'
        Label:
            text: 'Mi'
        Label:
            text: 'Do'
        Label:
            text: 'Fr'
        Label:
            text: 'Sa'
        Label:
            text: 'So'

    GridLayout:
        cols: 7
        id: cal

<CalendarScreen>:
    CalendarWidget:

<MenuScreen>:
    Label:
        text: 'todo :('

